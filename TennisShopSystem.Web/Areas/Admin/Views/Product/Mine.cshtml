@model TennisShopSystem.Web.Areas.Admin.ViewModels.Product.MyProductsViewModel
@{
    ViewBag.Title = "My Products";
}
<h2 class="text-center">@ViewBag.Title</h2>

<hr />
<h4>My Added Products</h4>
@if (!Model.AddedProducts.Any())
{
    <h2 class="text-center">You have no added products yet!</h2>
}
<div class="row">
    @foreach (var product in Model.AddedProducts)
    {
        @await Html.PartialAsync("~/Views/Shared/_ProductPartial.cshtml", product)
    }
</div>
<h4>My Bought Products</h4>
@if (!Model.BoughtProducts.Any())
{
    <h2 class="text-center">You have no bought products yet!</h2>
}
<div class="row">
    @foreach (var product in Model.BoughtProducts)
    {
        @await Html.PartialAsync("~/Views/Shared/_ProductPartial.cshtml", product)
    }
</div>
